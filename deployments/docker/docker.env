# TWINUP Sensor System - Environment Variables
# Bu dosya Docker Compose tarafından kullanılır

# Kafka Configuration
KAFKA_BROKERS=kafka:29092
KAFKA_TOPIC=sensor-data

# ClickHouse Configuration
CLICKHOUSE_HOST=clickhouse:9000
CLICKHOUSE_USER=twinup
CLICKHOUSE_PASSWORD=twinup123
CLICKHOUSE_DATABASE=sensor_data

# Redis Configuration
REDIS_HOST=redis:6379

# Producer Configuration
PRODUCER_DEVICE_COUNT=10000
PRODUCER_BATCH_SIZE=1000
PRODUCER_INTERVAL=1s

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Metrics Configuration
METRICS_ENABLED=true

# Security
JWT_SECRET=twinup-super-secret-jwt-key-2023

# MQTT Configuration
MQTT_BROKER=mosquitto:1883

# Network Configuration
NETWORK_SUBNET=172.20.0.0/16
